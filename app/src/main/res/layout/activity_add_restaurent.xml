<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddRestaurentActivity">

    <TextView
        android:id="@+id/textview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:text="Add Restaurant"
        android:textColor="@android:color/black"
        android:textSize="20sp"></TextView>
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview1"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                >
                <EditText
                    android:id="@+id/nameofrestaurent"
                    android:layout_width="match_parent"
                    android:layout_height ="wrap_content"
                    android:hint="ENTER RESTAURANT NAME"/>
                <EditText
                    android:id="@+id/cityofrestaurant"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="ENTER ADDRESS MANUALLY"
                    android:layout_below="@+id/nameofrestaurent"/>
                <EditText
                    android:id="@+id/phoneofreataurant"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="ENTER CONTACT NUMBER(for customer to contact)"
                    android:layout_below="@id/cityofrestaurant"/>
                <TextView
                    android:id="@+id/textview3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SERVICES"
                    android:layout_marginTop="20dp"
                    android:layout_below="@id/phoneofreataurant"/>

                <TableLayout
                    android:id="@+id/Linearlayout1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:stretchColumns="0,1,2"
                    android:layout_below="@id/textview3">
                    <TableRow>
                    <CheckBox
                        android:id="@+id/checkbox11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Breakfast"
                        android:layout_column="0"
                        android:onClick="onCheckboxClicked"/>
                    <CheckBox
                        android:id="@+id/checkbox12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:text="Lunch"
                        android:onClick="onCheckboxClicked"/>
                    <CheckBox
                        android:id="@+id/checkbox13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="2"
                        android:text="Dinner"
                        android:onClick="onCheckboxClicked"/>
                </TableRow>
                    <TableRow>
                    <CheckBox
                        android:id="@+id/checkbox14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="cafe"
                        android:layout_column="0"
                        android:onClick="onCheckboxClicked"/>
                    <CheckBox
                        android:id="@+id/checkbox15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nightlife"
                        android:layout_column="1"
                        android:onClick="onCheckboxClicked"/>
                    </TableRow>
                </TableLayout>
                <TextView
                    android:id="@+id/textview4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PAYMENTS"
                    android:layout_marginTop="20dp"
                    android:layout_below="@id/Linearlayout1"/>
                <LinearLayout
                    android:id="@+id/Linearlayout2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@id/textview4">
                    <CheckBox
                        android:id="@+id/checkbox21"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cash"
                        android:onClick="onCheckboxClicked"/>
                    <CheckBox
                        android:id="@+id/checkbox22"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cards"
                        android:onClick="onCheckboxClicked"/>
                    <CheckBox
                        android:id="@+id/checkbox23"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="UPI"
                        android:onClick="onCheckboxClicked"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/textview5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Availaible Timings"
                    android:layout_marginTop="20dp"
                    android:layout_below="@id/Linearlayout2"/>
                 <TableLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:id="@+id/table_layout"
                     android:stretchColumns="0,1,2,3"
                     android:layout_below="@id/textview5">
                     <TableRow
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content">
                     <CheckBox
                         android:id="@+id/checkbox31"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_column="0"
                         android:text="Monday"
                         android:layout_weight="1"
                         android:onClick="onCheckboxClicked"/>
                     <CheckBox
                         android:id="@+id/checkbox32"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_column="1"
                         android:layout_weight="1"
                         android:text="Tuesday"
                         android:onClick="onCheckboxClicked"/>
                     <CheckBox
                         android:id="@+id/checkbox33"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_column="2"
                         android:layout_weight="1"
                         android:text="Wednesday"
                         android:onClick="onCheckboxClicked"/>
                     <CheckBox
                         android:id="@+id/checkbox34"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_column="3"
                         android:layout_weight="1"
                         android:text="Thursday"
                         android:onClick="onCheckboxClicked"
                         /></TableRow>
                         <TableRow>
                             <CheckBox
                                 android:id="@+id/checkbox35"
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:layout_column="0"
                                 android:text="Friday"
                                 android:onClick="onCheckboxClicked"/>
                             <CheckBox
                                 android:id="@+id/checkbox36"
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:layout_column="1"
                                 android:text="Saturday"
                                 android:onClick="onCheckboxClicked"/>
                             <CheckBox
                                 android:id="@+id/checkbox37"
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:layout_column="2"
                                 android:text="Sunday"
                                 android:onClick="onCheckboxClicked"/>
                         </TableRow>
                 </TableLayout>

                <MultiAutoCompleteTextView
                    android:id="@+id/CuisineTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="SELECT CUISINE"
                    android:layout_marginTop="20dp"
                    android:layout_below="@id/table_layout"
                    >
                </MultiAutoCompleteTextView>
               <com.google.android.material.textfield.TextInputEditText
                   android:id="@+id/edittext_yourself"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_below="@id/CuisineTextView"
                   android:background="@drawable/input"
                   android:hint="Write something about restaurant..."
                   android:padding="30dp" />
                <LinearLayout
                    android:id="@+id/linear_layout8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@+id/edittext_yourself">
                    <TextView
                        android:id="@+id/textview7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select image for Ambience"/>
                    <ImageButton
                        android:id="@+id/add_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/add3"
                        android:background="@color/cardview_light_background"/>
                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/Imagerecyclerview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/linear_layout8" />
                <LinearLayout
                    android:id="@+id/linear_layout9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@id/Imagerecyclerview">
                    <TextView
                        android:id="@+id/textview8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select image for foods"/>
                    <ImageButton
                        android:id="@+id/add_food"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/add3"
                        android:background="@color/cardview_light_background"/>
                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/foodrecyclerview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/linear_layout9" />
                <LinearLayout
                    android:id="@+id/linear_layout10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@id/foodrecyclerview">
                    <TextView
                        android:id="@+id/textview9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="add image for menu book"/>
                    <ImageButton
                        android:id="@+id/add_menu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/add3"
                        android:background="@color/cardview_light_background"/>
                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/menurecyclerview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/linear_layout10" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/website_restaurant"
                    android:hint="Enter website(if any)"
                    android:inputType="textWebEditText"
                    android:layout_below="@+id/menurecyclerview"/>
                <CheckBox
                    android:id="@+id/location_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/website_restaurant"
                    android:onClick="onCheckboxClicked"
                    android:text= "Check the box to set your restaurant location"/>
                <TextView
                    android:id="@+id/hintview"
                    android:layout_below="@id/location_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="you current location will be taken so you must be at restaurant"/>
                <Button
                    android:id="@+id/save_restarentData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/saveinfo"
                    android:layout_below="@id/hintview"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </ScrollView>
</RelativeLayout>