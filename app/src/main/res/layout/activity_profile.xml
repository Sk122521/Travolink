<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/relative_layout1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/cardview_light_background"
                app:layout_scrollFlags="scroll|enterAlways|snap">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/hdr_img"
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:src="@drawable/nanital"
                    android:scaleType="centerCrop">
                </androidx.appcompat.widget.AppCompatImageView>
                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/edit_profile"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/edit_icon"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:background="@color/fui_transparent"
                    android:padding="20dp"
                    android:onClick="EditProfile"
                    android:visibility="gone"/>
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_circle"
                    android:layout_width="120.0dp"
                    android:layout_height="120.0dp"
                    android:layout_marginTop="180dp"
                    android:src="@drawable/profile"
                    android:layout_centerHorizontal="true"
                    app:civ_border_color="@color/cardview_light_background"
                    app:civ_border_width="5.0dip" />
                <LinearLayout
                    android:id="@+id/Ll1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/profile_circle"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/name_user"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:layout_below="@id/profile_circle"
                            android:textColor="@color/cardview_dark_background"
                            android:textSize="30sp" />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/job_User"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/name_user"
                            android:textAlignment="center"
                            android:visibility="gone"
                            android:textColor="@color/cardview_shadow_start_color"
                            android:textSize="20sp" />
                    </LinearLayout>
                </LinearLayout>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/bio_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Ll1"
                    android:textSize="15sp"
                    android:padding="5dp"
                    android:visibility="gone"
                    android:textColor="@color/cardview_dark_background"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/User_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/locationicon"
                    android:layout_below="@id/bio_user"
                    android:layout_marginLeft="20dp"
                    android:textColor="@android:color/black"
                    android:visibility="gone"/>
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/links"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:autoLink="web"
                    android:visibility="gone"
                    android:layout_below="@id/User_location"
                    android:drawableLeft="@drawable/link_icon"
                    android:textColor="#ff536dfe" />
                <LinearLayout
                    android:id="@+id/LL2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@id/links"
                    android:padding="5dp">
                    <LinearLayout
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:onClick="UserFollower">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/no_followers"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="10.0dip"
                            android:text="1254"
                            android:inputType="number"
                            android:textColor="@color/cardview_dark_background"
                            android:textSize="20.0sp"
                            android:textStyle="bold" />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Followers"
                            android:textAlignment="center"
                            android:textColor="@color/cardview_dark_background"
                            android:textSize="20.0sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:onClick="UserFollows"
                        android:orientation="vertical">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/no_following"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="10.0dip"
                            android:text="12"
                            android:inputType="number"
                            android:textColor="@color/cardview_dark_background"
                            android:textSize="20.0sp"
                            android:textStyle="bold" />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Following"
                            android:textAlignment="center"
                            android:textColor="@color/cardview_dark_background"
                            android:textSize="20.0sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/Friends_LL"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:onClick="UserFrnds">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/no_of_friends"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="10.0dip"
                            android:textColor="@color/cardview_dark_background"
                            android:textSize="20.0sp"
                            android:text="22"
                            android:inputType="number"
                            android:textStyle="bold" />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Friends"
                            android:textColor="@color/cardview_dark_background"
                            android:textSize="20.0sp" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/RL1"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical">
                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/message_fab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:clickable="false"
                        android:onClick="SendMessage"
                        android:src="@drawable/message_icon"
                        android:visibility="invisible" />
                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/friend_fab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:onClick="SendRequest"
                        android:src="@drawable/sent_request_icon"
                        android:visibility="invisible"/>
                </LinearLayout>
                <RelativeLayout
                    android:id="@+id/RL1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/LL2"
                    >
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/follow_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_toStartOf="@+id/main_fab"
                        android:backgroundTint="@color/cardview_light_background"
                        android:onClick="FollowUser"
                        android:text="+ Follow"
                        android:textAllCaps="false"
                        android:textColor="@android:color/black"
                        app:strokeColor="@android:color/black"
                        app:strokeWidth="1dp" />
                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/main_fab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="10dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentBottom="true"
                        android:src="@drawable/add1"/>
                </RelativeLayout>
            </RelativeLayout>
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/profile_tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.appbar.AppBarLayout>
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/profile_tabs_pager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_anchor="@+id/profile_tabs_pager"
            app:layout_anchorGravity="center"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</RelativeLayout>
