<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ShowRestaurantActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_destination"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/dest_collaspingToolbar"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            app:contentScrim="@color/colorPrimaryDark"
            app:layout_scrollFlags="scroll|snap|exitUntilCollapsed"
            app:expandedTitleGravity="bottom|right"
            app:expandedTitleMarginBottom="20dp"
            app:expandedTitleMarginEnd="20dp"
            app:expandedTitleTextAppearance="@style/ExpandedAppBar"
            app:collapsedTitleTextAppearance="@style/CollapsedAppBar"
            >
            <ImageView
                android:id="@+id/dest_headerimage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/destinationtoolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:titleTextColor="@android:color/white"
                app:layout_collapseMode="pin"
                ></androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@id/app_bar_destination"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp">
    <TextView
        android:id="@+id/name_destination"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="30dp"
        />
     <TextView
         android:id="@+id/type_destination"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_below="@id/name_destination"
         android:layout_marginLeft="10dp"
         android:textSize="15dp"/>
    <TextView
        android:id="@+id/about_destination"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/type_destination" />
    <TextView
        android:id="@+id/destination_images"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Photos"
        android:textSize="25sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/about_destination"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/DestinationImagesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_below="@id/destination_images"
        android:layout_marginLeft="10dp"
        />
    </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/MapButton_dest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:foreground="@drawable/locationicon"
        android:backgroundTint="@android:color/white"
        android:layout_gravity="bottom|right"
        android:layout_margin="15dp"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>