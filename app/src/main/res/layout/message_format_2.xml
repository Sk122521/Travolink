        android:layout_height="300dp"
        android:layout_margin="5.0dip"
        android:layout_marginTop="4.0dip"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent" />
