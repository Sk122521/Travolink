<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="#E4DADA">

    <androidx.cardview.widget.CardView
        android:id="@+id/restaurent_cardview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ECE1E1"
        app:cardElevation="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/restaurent_image"
                android:layout_width="140dp"
                android:layout_height="170dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/taj2" />

            <TextView
                android:id="@+id/restaurent_name"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/restaurent_image"
                android:layout_marginTop="2dp"
                android:gravity="center_horizontal"
                android:text="Taj restaurent"
                android:textAlignment="center"
                android:textSize="13dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/restaurent_type"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/restaurent_name"
                android:layout_marginTop="1dp"
                android:text="Restaurent"
                android:textAlignment="center"
                android:textSize="10dp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>